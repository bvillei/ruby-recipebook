<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @recipe.owner.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @recipe.category %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@recipe.image, width: 250) %>
</p>

<p>
  <strong>Ingredients:</strong>
  <%= @recipe.ingredients %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<% if logged_in? %>
  <%= link_to 'Edit', edit_recipe_path(@recipe), class: 'btn btn-warning' %> |
<% end %>
<%= link_to 'Back', recipes_path %>
